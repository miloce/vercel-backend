{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
      },
      { 
        "src": "public/index.html", 
        "use": "@vercel/static"
      }
    
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    { 
      "src": "/",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "WECHAT_APP_ID": "@wechat_app_id",
    "WECHAT_APP_SECRET": "@wechat_app_secret"
  }
} 
