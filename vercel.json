{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { 
      "src": "/api/(saveUserData|getUserData|getOpenId|getHealthRecord|saveHealthRecord)",
      "dest": "/api/$1.js",
      "methods": ["GET", "POST"]
    }
  ]
} 